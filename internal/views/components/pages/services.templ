templ ServiceDetail(id, emoji, title, description string, features []string) {
	<section id={ id } class="card">
		<div class="flex items-start space-x-4">
			<div class="text-4xl">{ emoji }</div>
			<div class="flex-1">
				<h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-3">{ title }</h2>
				<p class="text-gray-600 dark:text-gray-300 mb-6">{ description }</p>
				<ul class="space-y-2">
					for _, feature := range features {
						<li class="flex items-start space-x-2">
							<svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
							</svg>
							<span class="text-gray-600 dark:text-gray-300">{ feature }</span>
						</li>
					}
				</ul>
			</div>
		</div>
	</section>
}
